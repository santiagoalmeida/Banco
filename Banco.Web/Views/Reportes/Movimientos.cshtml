@model Banco.Web.Models.ReporteMovimientosViewModel

@{
    ViewData["Title"] = "Movimientos";
}

<h1>Movimientos</h1>

<h4>Consulta movimientos</h4>
<hr />
<div class="row">
    <form asp-action="Movimientos">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-md-3">
            <label asp-for="parametros.IdCliente" class="control-label"></label>
            <select asp-for="parametros.IdCliente" class="form-control" asp-items="Model.selectClientes"></select>
            <span asp-validation-for="parametros.IdCliente" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="parametros.Desde" class="control-label"></label>
            <input asp-for="parametros.Desde" class="form-control" />
            <span asp-validation-for="parametros.Desde" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="parametros.Hasta" class="control-label"></label>
            <input asp-for="parametros.Hasta" class="form-control" />
            <span asp-validation-for="parametros.Hasta" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <input type="submit" value="Consultar" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
    <hr />
    @await Html.PartialAsync("_ListaConsultaMovimientos", Model.consulta)