@using Banco.Web.Constantes
@model Banco.Web.Models.CuentasViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cuenta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="cuenta.numeroCuenta" class="control-label"></label>
                <input asp-for="cuenta.numeroCuenta" class="form-control" />
                <span asp-validation-for="cuenta.numeroCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cuenta.idCliente" class="control-label"></label>
                <select asp-for="cuenta.idCliente" class="form-control" asp-items="Model.SelectClientes"></select> 
                <span asp-validation-for="cuenta.idCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cuenta.tipoCuenta" class="control-label"></label>
                <select asp-for="cuenta.tipoCuenta" class="form-control" asp-items="Html.GetEnumSelectList<TipoCuenta>()"></select>
                <span asp-validation-for="cuenta.tipoCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cuenta.saldoInicial" class="control-label"></label>
                <input asp-for="cuenta.saldoInicial" class="form-control" />
                <span asp-validation-for="cuenta.saldoInicial" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="cuenta.estado" /> @Html.DisplayNameFor(model => model.cuenta.estado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
